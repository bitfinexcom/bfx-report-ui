{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "rules": {
    "jsx-quotes": ["error", "prefer-single"],
    "react/jsx-filename-extension": [2, { "extensions": [".js"] }],
    "semi": [2, "never"],
    "max-len": [2, 120],
    "linebreak-style": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "env": {
    "browser": true,
    "jest": true
  }
}
